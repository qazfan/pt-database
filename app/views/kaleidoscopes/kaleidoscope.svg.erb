<svg version="1.1"
     width="1000" height="1000"
     xmlns="http://www.w3.org/2000/svg"
     >

  <defs>
    <g id="subject">
      <text
        fill="#0FF"
        font-size="202"
        alignment-baseline="middle"
        text-anchor="middle"
      >♛♞♛♞</text>
      <text
        fill="#F0F"
        font-size="252"
        alignment-baseline="middle"
        text-anchor="middle"
            transform="rotate(90)"
      >ฒผู้ฒผู้</text>
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        from="0"
        to="360"
        dur="4s"
        repeatCount="indefinite"
      />
    </g>
    <clipPath id="triangle">
      <polygon points="0 0, 0 50, 29 50" fill="#000"/>
    </clipPath>
    <g id="single">
      <use href="#subject" clip-path="url(#triangle)" />
    </g>
    <g id="double">
      <use href="#single"/>
      <use href="#single" transform-origin="0 0" transform="scale(-1, 1)"/>
    </g>
    <g id="triangles" transform="translate(29 50)">
      <use href="#double"/>
      <use href="#double" transform="rotate(60)"/>
      <use href="#double" transform="rotate(120)"/>
      <use href="#double" transform="rotate(180)"/>
      <use href="#double" transform="rotate(240)"/>
      <use href="#double" transform="rotate(300)"/>

      <use href="#double" transform="translate(86.5 -50) rotate(0)"/>
      <use href="#double" transform="translate(86.5 -50) rotate(60)"/>
      <use href="#double" transform="translate(86.5 50) rotate(120)"/>
      <use href="#double" transform="translate(86.5 50) rotate(180)"/>
      <use href="#double" transform="translate(86.5 50) rotate(240)"/>
      <use href="#double" transform="translate(86.5 -50) rotate(300)"/>
    </g>
  </defs>
  <%# <rect height="200" width="300" fill="black"/> %>
  <g clip-path="url(#repeatRect)">
    <use href="#triangles"/><use href="#triangles" transform="translate(173, 0)"/>
    <use href="#triangles" transform="translate(0, 100)"/><use href="#triangles" transform="translate(173, 100)"/>
    <use href="#triangles" transform="translate(0, 200)"/><use href="#triangles" transform="translate(173, 200)"/>
  </g>
</svg>