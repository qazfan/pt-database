<%# TODO: This belongs in views/pets/index.html.erb %>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">Pets</h1>
      <p class="text-center">To find a specific pet, please use the <%= link_to "home page", root_path %>.</p>
      <br/>
      <h4><%= will_paginate @pets, class: 'text-center' %></h4>
      <br>
      <ul class="list-unstyled">
        <% @pets.each do |pet| %>
          <li>
            <div class="well row <%= cycle('white-bg', '') %>">
              <div class="col-sm-12 text-center">
                <%= link_to controller: "users", action: "petshow", id: pet.id do %>
                  <% img_class = pet.verified == true ? 'user-index-avatar-green' : 'user-index-avatar' %>
                  <%= image_tag("http://pets.neopets.com/cpn/#{pet.name}/1/4.png", class: img_class) %>
                <% end %>
                <%= link_to controller: "users", action: "petshow", id: pet.id do %>
                  <h2 class="inline float-left"><%= pet.name %></h2>
                <% end %>
                <div class="float-right">
                  <% if pet.uft == true %>
                    <span class="label label-success">UFT</span>
                  <% end %>
                  <% if pet.ufa == true %>
                    <span class="label label-success">UFA</span>
                  <% end %>
                  <% if pet.uc == true %>
                    <span class="label label-success">UC</span>
                  <% end %>
                  <% if pet.rw == true %>
                    <span class="label label-success">RW</span>
                  <% end %>
                  <% if pet.rn == true %>
                    <span class="label label-success">RN</span>
                  <% end %>
                  <% if (pet.hsd || 0) >= 250 %>
                    <span class="label label-success">BD</span>
                  <% elsif (pet.hsd || 0) <= 249 && pet.hsd >= 100 %>
                    <span class="label label-success">St. BD</span>
                  <% end %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <h4><%= will_paginate @pets, class: 'text-center' %></h4>
      <br/>
    </div>
  </div>
</div>